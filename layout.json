      "min": 0,
      "max": 999999999,
      "decimals": 3,
      "width": 200
    },

    {
      "type": "line",
      "label": "仕上寸法１",
      "key": "仕上寸法１",
      "row": 5,
      "col": 0,
      "validator": "float",
      "min": 0,
      "max": 999999999,
      "decimals": 3,
      "width": 200
    },
    {
      "type": "line",
      "label": "仕上寸法２",
      "key": "仕上寸法２",
      "row": 5,
      "col": 1,
      "validator": "float",
      "min": 0,
      "max": 999999999,
      "decimals": 3,
      "width": 200
